@using BlazorApplication1.Shared

@if (UserIdentity.IsSignedIn)
{
    <form action="/Account/Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="/Manage/Index" title="Manage">Hello @UserIdentity.Name!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="Account/Register">Register</a></li>
        <li><a href="Account/Login">Log in</a></li>
    </ul>
}

@functions{

    [CascadingParameter]
    UserIdentity UserIdentity { get; set; }
}
